# Server Configuration
PORT=3000
NODE_ENV=development

# CORS Configuration
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:19006,exp://localhost:19000

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-in-production-min-32-chars
JWT_EXPIRES_IN=7d

# API Keys for Server-to-Server Communication
API_KEYS=api_key_1,api_key_2

# Fal.ai Configuration
FAL_API_KEY=your_fal_ai_api_key_here

# Stable Audio Configuration
STABLE_AUDIO_API_KEY=your_stable_audio_api_key_here

# Database Configuration (MongoDB)
MONGODB_URI=mongodb://localhost:27017/video-music-assistant
MONGODB_TEST_URI=mongodb://localhost:27017/video-music-assistant-test

# Redis Configuration (for rate limiting & caching)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# Firebase Configuration (for file storage)
FIREBASE_API_KEY=your_firebase_api_key_here
FIREBASE_AUTH_DOMAIN=your_firebase_auth_domain_here
FIREBASE_PROJECT_ID=your_firebase_project_id_here
FIREBASE_STORAGE_BUCKET=your_firebase_storage_bucket_here
FIREBASE_MESSAGING_SENDER_ID=your_firebase_messaging_sender_id_here
FIREBASE_APP_ID=your_firebase_app_id_here

# AWS S3 Configuration (alternative to Firebase)
AWS_ACCESS_KEY_ID=your_aws_access_key_id_here
AWS_SECRET_ACCESS_KEY=your_aws_secret_access_key_here
AWS_REGION=us-east-1
AWS_BUCKET_NAME=your_bucket_name_here

# Email Configuration (for notifications)
EMAIL_SERVICE=gmail
EMAIL_USER=your_email@gmail.com
EMAIL_PASSWORD=your_email_app_password

# Stripe Configuration (for payments)
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# Adapty Configuration
ADAPTY_API_KEY=your_adapty_api_key_here
ADAPTY_SECRET_KEY=your_adapty_secret_key_here

# Logging Configuration
LOG_LEVEL=info
LOG_FILE_PATH=./logs

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# File Upload Limits
MAX_FILE_SIZE=52428800
MAX_VIDEO_DURATION=300

# Feature Flags
ENABLE_ANALYTICS=false
ENABLE_EMAIL_NOTIFICATIONS=false
ENABLE_WEBHOOKS=false
